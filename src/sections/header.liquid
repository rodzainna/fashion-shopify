{% if template == 'collection' or
      template == 'product' or
      template == 'cart' or
      template == 'page.shop' or
      template == 'list-collections'
%}
<!-- Header -->
<header class="fixed w-full z-50 darkHeader">
    <div id="collection-header" class="container">
      <div class="flex flex-wrap justify-between text-gray-500">
        <a class="w-full md:w-auto flex justify-center" href="/">
          <img class="h-6 w-auto" src="{{ 'Logo-Black.png' | asset_url }}">
        </a>

        <input class="algolia-shopify-autocomplete" type="text" name="search" value="">

        <div class="w-full md:w-auto flex items-center pt-6 md:pt-0 justify-between md:-mx-4">
          <select class="md:mx-4 font-montserrat text-xs bg-white">
            <option selected>USD</option>
            <option>PHP</option>
          </select>

          <select class="md:mx-4 font-montserrat text-xs bg-white">
            <option selected>EN</option>
            <option>FR</option>
          </select>

          <span class="md:px-4 font-montserrat text-xs">LOGIN</span>

          <!-- Cart Button -->
          <a href="/cart" class="md:mx-4 hover:text-black text-gray-500">
            <svg width="22" height="20" xmlns="http://www.w3.org/2000/svg"><path d="M19 20H3a3 3 0 0 1-3-3L2 7a3 3 0 0 1 3-3h1a5.126 5.126 0 0 1 10 0h1a3 3 0 0 1 3 3l2 10a3 3 0 0 1-3 3zM11 2a3.243 3.243 0 0 0-3 2h6a3.243 3.243 0 0 0-3-2zm7 6a2.006 2.006 0 0 0-2-2v1a1 1 0 0 1-2 0V6H8v1a1 1 0 1 1-2 0V6a2 2 0 0 0-2 2l-2 8a2 2 0 0 0 2 2h14a2.006 2.006 0 0 0 2-2l-2-8z" fill="currentColor" fill-rule="nonzero"/></svg>
          </a>
          <!-- Cart Button End -->

          <!-- Search Button -->
          <div id="" class="cursor-pointer md:mx-4 hover:text-black text-gray-500">
            {% include 'icon-search' %} 
          </div>
          <!-- Search Button End -->
        </div>
      </div>
    </div>
</header>
<!-- Header End -->

{% else %}
<!-- Header Start -->
<header id="header" class="clearHeader fixed w-full z-50">
    <div class="container">
      <div class="flex justify-between items-center">
        <a href="/">
          <img id="header-logo-white" alt="" class="max-w-full h-6 w-auto" src="{{ 'Logo.png' | asset_url }}">
          <img id="header-logo-black" alt="" class="max-w-full h-6 w-auto hidden" src="{{ 'Logo-Black.png' | asset_url }}">
        </a>
        <div class="flex hidden md:flex">
          <ul class="flex list-none font-montserrat text-sm">
              <li><a href="/collections" class="uppercase mr-12 tracking-wider">Collections</a></li>
            <li><a href="/pages/shop" class="uppercase mr-12 tracking-wider">Lookbook</a></li>
            <li><a href="/pages/blogs" class="uppercase mr-12 tracking-wider">Blogs</a></li>
            <li><a href="/pages/article" class="uppercase mr-12 tracking-wider">Article</a></li>
            <li><a href="/pages/contact" class="uppercase mr-12 tracking-wider">Contacts</a></li>
          </ul>
  
          <a href="/cart" class="hover:text-black">
            <svg width="22" height="20" xmlns="http://www.w3.org/2000/svg">
              <path
                d="M19 20H3a3 3 0 0 1-3-3L2 7a3 3 0 0 1 3-3h1a5.126 5.126 0 0 1 10 0h1a3 3 0 0 1 3 3l2 10a3 3 0 0 1-3 3zM11 2a3.243 3.243 0 0 0-3 2h6a3.243 3.243 0 0 0-3-2zm7 6a2.006 2.006 0 0 0-2-2v1a1 1 0 0 1-2 0V6H8v1a1 1 0 1 1-2 0V6a2 2 0 0 0-2 2l-2 8a2 2 0 0 0 2 2h14a2.006 2.006 0 0 0 2-2l-2-8z"
                fill="currentColor" fill-rule="nonzero" />
            </svg>
          </a>
        </div>
      </div>
    </div>
</header>
<!-- Header End -->
  {% endif %}