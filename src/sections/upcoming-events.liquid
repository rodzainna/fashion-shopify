<!-- Upcoming Events Start -->
{% if section.blocks %}
<div class="container">
    <div class="py-4 md:py-8">
        <h2 class="w-full text-center text-5xl md:text-6xl font-unna">Upcoming Events</h2>
        <div class="md:-mx-4">
            <div id="upcoming-events-items" class="left-align-slick w-full py-4 md:py-8">
                {% for block in section.blocks %}
                    {% if block.settings.title != blank %}
                        <div class="w-full md:w-1/3 lg:w-1/4 px-4">
                            <div class="flex flex-col border border-gray-200 p-4 h-events-md lg:h-events">
                                {% if block.settings.type != blank %}
                                    <div class="uppercase text-xs font-bold text-gray-500">{{ block.settings.type | escape | truncate: 15 }}</div>
                                {% endif %}
                                {% if block.settings.date != blank %}    
                                    <div class="font-unna text-4xl lg:text-7xl">{{ block.settings.date | date: "%b %d" }}</div>
                                {% endif %}

                                {% if block.settings.title != blank %}
                                    <div class="flex flex-col justify-end h-events-md lg:h-events">
                                        <p class="font-lato font-thin text-base lg:text-xl">{{ block.settings.title | escape | truncate: 40 }}</p>
                                {% endif %}
                                
                                {% if block.settings.button_label != blank and block.settings.button_link != blank %}    
                                    <a href="{{ block.settings.button_link  }}" target="_blank"
                                        class="flex flex-wrap items-center mt-5 uppercase font-montserrat font-bold text-xs text-gray-300 hover:text-green-700">
                                        {{ block.settings.button_label | escape | truncate: 15 }}
                                        <span class="px-2">
                                            <svg width="28" height="8" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M0 2.987v2.015h23.018v3.024l5.01-4.035L23.015 0v2.98z"
                                                    fill="currentColor" fill-rule="evenodd" /></svg>
                                        </span>
                                    </a>
                                {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <!-- Event Next and Prev Buttons -->
        <div class="flex justify-end mx-3 md:-mx-1">
            <button id="events-prev"
                class="flex justify-center mx-1 h-10 w-10 rounded-full border border-gray-200 hover:bg-black hover:text-white">
                <svg width="17" height="8" xmlns="http://www.w3.org/2000/svg">
                    <path d="M16.004 5.038V3.024H5.01V0L0 4.034l5.013 3.992v-2.98z" fill="currentColor"
                        fill-rule="evenodd" /></svg>
            </button>

            <button id="events-next"
                class="flex justify-center mx-1 h-10 w-10 rounded-full border border-gray-200 hover:bg-black hover:text-white">
                <svg width="16" height="8" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 2.987v2.015h10.993v3.024l5.01-4.035L10.992 0v2.98z" fill="currentColor"
                        fill-rule="evenodd" /></svg>
            </button>
        </div>
        <!-- Event Next and Prev Buttons End -->
    </div>
</div>
{% endif %}
<!-- Upcoming Events End -->

{% schema %}
{
  "blocks": [
    {
        "type": "upcoming_events",
        "name": "Upcoming Event",
        "limit": 12,
        "settings": [
          {
            "type": "text",
            "id": "type",
            "label": "Type"
          }, //end type
          {
            "type": "text",
            "id": "date",
            "label": "Date (e.g Feb 08)",
            "placeholder": "Feb 08"
          }, //end date
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, //end text
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label",
            "default": "Learn More"
          }, //end button text
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          } //end button link
        ] //end settings
        
    } //end blocks curly
    
  ] //end blocks array,
}
{% endschema %}