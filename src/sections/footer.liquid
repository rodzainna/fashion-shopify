<!-- Footer Start -->
<footer class="container">
  <div class="py-8 -mx-4">
    <div class="flex flex-wrap items-center">
      <div class="flex flex-col items-center w-full md:w-1/3 my-4 md:my-0">
        <span class="font-montserrat font-bold text-sm uppercase">Follow Us</span>

        <div class="flex flex-wrap justify-center mt-3">
          {% unless section.settings.fb_url == blank %}
            <!-- FB -->
            <div class="px-4">
              {% include 'share-fb', footer: true, fb_url: section.settings.fb_url %}
            </div>
          {% endunless %}
          
          {% unless section.settings.twitter_url == blank %}
            <!-- Twitter -->
            <div class="px-4">
              {% include 'share-twitter', footer: true, twitter_url: section.settings.twitter_url %}
            </div>
          {% endunless %}

          {% unless section.settings.instagram_url == blank %}
            <!-- Instagram -->
            <div class="px-4">
              {% include 'share-instagram', footer: true, instagram_url: section.settings.instagram_url %}
            </div>
          {% endunless %}

          {% unless section.settings.gplus_url == blank %}
            <!-- GPlus -->
            <div class="px-4">
              {% include 'share-gplus', footer: true, gplus_url: section.settings.gplus_url %}
            </div>
          {% endunless %}
        </div>
      </div>

      <div class="flex justify-center w-full md:w-1/3 my-4 md:my-0">
          <a href="/">
              <img class="h-6 w-auto" src="{{ 'Logo-Black.png' | asset_url }}">
          </a>
      </div>

      <div class="flex flex-col justify-center items-center w-full md:w-1/3 my-4 md:my-0">
        <span class="font-montserrat font-bold text-sm uppercase">Sign up to our news</span>

        <div class="mt-3">
          <form class="flex flex-wrap">
            <input class="border border-gray-300 p-2 text-xs w-48" type="email" name="email"
              placeholder="Enter your email">
            <a href="#" class="flex items-center border border-black px-3 bg-black text-white hover:bg-white hover:text-black hover:border hover:border-green-800">
              <svg width="16" height="8" xmlns="http://www.w3.org/2000/svg"><path d="M0 2.987v2.015h10.993v3.024l5.01-4.035L10.992 0v2.98z" fill="currentColor" fill-rule="evenodd"/></svg>
            </a>
          </form>
        </div>

      </div>
    </div>
  </div>
</footer>
<!-- Footer End -->

<div class="bg-black">
  <div class="container text-white font-lato text-xs py-1">
    <div class="flex flex-wrap">
      <p class="text-white text-xs my-0">Design from
        <a target="_blank" class="underline"
          href="https://www.sketchappsources.com/free-source/3555-diadema-web-ui-kit-sketch-freebie-resource.html">Diadema
          UI Kit Sketch Resource</a>
      </p>
      &nbsp;
      <p class="text-white text-xs my-0 hidden md:flex">| Thanks to the design team at
        <a target="_blank" class="underline" href="https://eleken.co/">Eleken</a>
      </p>
    </div>
  </div>
</div>
    
    
