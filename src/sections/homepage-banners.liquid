{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available when you add the "Image with text" section in the theme editor.

  Theme Store required settings
  - Image
  - Heading: title of the block
  - Text: description of the block

  Theme Store optional settings
  - Button label: label associated with the button
  - Button link: link of the button
{%- endcomment -%}

<div id="banner-slider" class="">
    {% for block in section.blocks %}
        <div class="h-header-sm md:h-header-md lg:h-header-lg px-4 relative">
            <img class="absolute w-full h-header-sm md:h-header-md lg:h-header-lg object-cover"
              src="{{ block.settings.image | img_url: '700x' }}">
            <div class="container z-20 relative">
                <div
                  class="flex text-white items-center w-2/3 md:w-2/5 lg:w-1/3 leading-none h-header-sm md:h-header-md lg:h-header-lg md:ml-12p lg:ml-15p">
                    <div>
                        {% if block.settings.type != blank %}
                            <div class="uppercase font-montserrat font-bold text-xs">{{ block.settings.type | escape | truncate: 20 }}</div>
                        {% endif %}

                        {% if block.settings.text != blank %}
                            <div class="font-unna text-2xl md:text-4xl lg:text-8xl my-6">{{ block.settings.text | escape | truncate: 30 }}</div>
                        {% endif %}

                        {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                            <div class="md:my-4 lg:my-6">
                                <a href="{{ block.settings.button_link }}"
                                  class="uppercase px-4 lg:px-10 py-2 md:py-3 border-2 w-auto border-white font-montserrat font-bold text-xs lg:text-sm hover:bg-white hover:text-brown-400">
                                      {{ block.settings.button_label | escape | truncate: 15 }}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% schema %}
{
  "blocks": [
    {
        "type": "homepage_banner",
        "name": "Homepage Banner",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, //end image picker
          {
            "type": "text",
            "id": "type",
            "label": "Category",
            "default": "Spring 2017"
          }, //end category
          {
            "type": "text",
            "id": "text",
            "label": "Text",
            "placeholder": "The limit is 50 characters."
          }, //end text
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          }, //end button text
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          } //end button link
        ] //end settings
        
    } //end blocks curly
    
  ] //end blocks array,
}
{% endschema %}
